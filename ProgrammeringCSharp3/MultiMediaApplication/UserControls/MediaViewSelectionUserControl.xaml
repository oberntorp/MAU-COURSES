<UserControl x:Class="MultiMediaApplication.UserControls.MediaViewSelectionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultiMediaApplication"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="10" MouseLeftButtonUp="StackPanel_MouseLeftButtonUp">
        <Image Source="{Binding MediaImageSource}"/>
        <Label Content="{Binding MediaName}"/>
    </StackPanel>
</UserControl>
